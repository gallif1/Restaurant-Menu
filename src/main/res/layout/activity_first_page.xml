<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FirstPage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/firstCourseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#831F1F"
            android:text="First Courses"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/mainCourseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#831F1F"
            android:text="Main Courses"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/drinksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#831F1F"
            android:text="Drinks"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/dessertButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#831F1F"
            android:layout_marginTop="16dp"
            android:text="Dessert"
            tools:ignore="HardcodedText" />

        <!-- כפתור חדש לעגלת הקניות -->
        <Button
            android:id="@+id/ordersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#4CAF50"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="My Orders"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="643dp" />

    </LinearLayout>

    <Button
        android:id="@+id/cartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="Go to Cart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        android:drawableStart="@drawable/shopping_cart"
        android:drawablePadding="8dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        tools:ignore="HardcodedText,MissingConstraints"/>




</androidx.constraintlayout.widget.ConstraintLayout>
